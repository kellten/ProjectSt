    End Sub

    Private Sub UcMainStock1_OnConnection(status As String) Handles UcMainStock1.OnConnection
        'SetBaseFavControl(0)
        'SetBaseStockListDisplay()

        UcMainStock1.GetAccount()

        For Each dr As DataRow In UcMainStock1._AccNo.Tables("ACCNO").Rows
