<Window x:Class="TaskCompletionSourceWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,0,0.4,232.8">
            <Button Content="대기 시작" Margin="5" Padding="10" Click="btnWaiting_Click"/>
            <Button Content="대기 종료" Margin="5" Padding="10" Click="btnStop_Click"/>
            <TextBlock x:Name="txtMessage" TextWrapping="Wrap" Width="373" Margin="5,5,5,5.4"/>

        </StackPanel>
    </Grid>
</Window>
